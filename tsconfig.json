{
  "version": "1.8.0",
  "compilerOptions": {
      "outDir": "dist/",
      "lib": [
        "es6",
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "dom",
        "dom.iterable"
      ],
      "resolveJsonModule": true,
      //"baseUrl": "./",
      //"strict": true,
      "strictNullChecks": false,
      "noEmit": true,
      "target": "ESNext",
      //"target": "es5",
      "allowJs": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noUnusedLocals": false,
      "esModuleInterop": true,
      "noImplicitAny": true,
      /*"declaration": true,*/
  },
  "include": ["./src/**/*"],
  "exclude": [ "build", "node_modules" ]
}